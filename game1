import random

random_number = random.randint(1, 10)
guess = int(input('enter a number between 1 and 10'))

while guess != random_number:
    if guess < random_number:
        print('guess too low try again')
    if guess > random_number:
        print('guess too high try again')
    else:
        print('you win')
        break
